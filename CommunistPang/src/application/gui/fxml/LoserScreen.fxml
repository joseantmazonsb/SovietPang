<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="rootPane" prefHeight="720.0" prefWidth="1280.0" styleClass="loserLayout" stylesheets="@../style/app.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.gui.LoserScreen">
   <center>
      <VBox alignment="CENTER" fillWidth="false" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="score" alignment="TOP_CENTER" styleClass="gameText" text="YOUR SCORE: ">
               <padding>
                  <Insets top="30.0" />
               </padding>
            </Label>
            <Label fx:id="levelReached" alignment="TOP_CENTER" styleClass="gameTextLittle" text="level Reached: ">
               <padding>
                  <Insets bottom="50.0" />
               </padding>
            </Label>
            <JFXButton fx:id="playAgainButton" onAction="#handlePlayAgain" ripplerFill="BLACK" styleClass="commonButton" text="PLAY AGAIN" />
            <JFXButton onAction="#handleGoBack" ripplerFill="BLACK" styleClass="commonButton" text="BACK TO HOME" />
            <JFXButton onAction="#handleExit" ripplerFill="BLACK" styleClass="commonButton" text="QUIT" />
         </children>
      </VBox>
   </center>
   <top>
      <Label alignment="TOP_CENTER" styleClass="gameText3" text="YOU LOSE" BorderPane.alignment="CENTER">
         <padding>
            <Insets top="50.0" />
         </padding>
      </Label>
   </top>
</BorderPane>
